# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rag_chatbot
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MAX=20

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model Configuration
# Embedding models:
#   - text-embedding-3-small (1536 dims, cheaper, good performance)
#   - text-embedding-3-large (3072 dims, best performance)
#   - text-embedding-ada-002 (1536 dims, legacy)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Chat models:
#   - gpt-4-turbo-preview (latest GPT-4 with 128k context)
#   - gpt-4 (standard GPT-4)
#   - gpt-3.5-turbo (faster, cheaper)
OPENAI_CHAT_MODEL=gpt-4-turbo-preview

# OpenAI Generation Parameters
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_DELAY=1000

# Alternative AI Providers (optional)
# Anthropic Claude (for LLM)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cohere (alternative for embeddings)
# COHERE_API_KEY=your_cohere_api_key_here

# RAG Configuration
EMBEDDING_DIMENSION=1536
SIMILARITY_THRESHOLD=0.7
MAX_SOURCES=5