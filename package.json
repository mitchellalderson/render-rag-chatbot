{
  "name": "render-rag-chatbot",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "common-ui",
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev:common-ui": "npm run dev -w common-ui",
    "build:common-ui": "npm run build -w common-ui",
    "dev:backend": "npm run dev -w backend",
    "build:backend": "npm run build -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "build:frontend": "npm run build -w frontend",
    "build": "npm run build -w common-ui && npm run build -w backend && npm run build -w frontend"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}